[Unit]
Description=Flight Tracker Backend
After=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/var/www/track/backend
Environment=NODE_ENV=production
ExecStart=/usr/bin/node server.js
Restart=on-failure
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=flight-tracker

[Install]
WantedBy=multi-user.target
